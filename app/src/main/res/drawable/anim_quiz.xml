<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/state_on"
        android:drawable="@drawable/ic_dashboard_black_24dp"
        android:state_checked="true"/>
    <item android:id="@+id/state_off"
        android:drawable="@drawable/ic_dashboard_black_24dp" tools:ignore="StateListReachable" />
    <!-- specify transitions -->
    <transition
        android:drawable="@drawable/ic_dashboard_black_24dp"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" tools:ignore="UnusedAttribute" />
</selector>
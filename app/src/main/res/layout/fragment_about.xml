<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F0FFF0"

    android:layout_height="match_parent"

    android:orientation="vertical"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/sv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myPict"
                android:src="@drawable/icon"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_height="wrap_content"
                android:layout_below="@id/myPict"
                android:drawableLeft="@mipmap/ic_girls"
                android:text="Tsabita\n MAN 4 Jombang"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textSize="20sp"
                android:id="@+id/txt1"
                android:background="@drawable/bgtext"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:background="@drawable/bgtext"

                android:drawableLeft="@mipmap/ic_girls"
                android:text="Ayuma\n MAN 4 Jombang"
                android:textAlignment="center"
                android:id="@+id/nama"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Referensi*"
                android:layout_below="@id/nama"
                android:id="@+id/txt"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""

                android:layout_below="@id/txt"
                android:id="@+id/txt3"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ref1"
                android:layout_below="@id/txt"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="
https://www.youtube.com/watch?v=x5mSei3Gh_Q"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ref2"
                android:layout_below="@id/ref1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="
                https://id.wikipedia.org/wiki/Wayang
                "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ref3"
                android:layout_below="@id/ref2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="
                http://dl.lagu123.link/download/2TMFgez0gSgdVyiCz_lVCA/1563958249/cca936776b9efe4375557c86cb31a994/35bf2ca6af083bc428af060e5c008418.mp3?s=2name=NYIDAM%20SARI~DIWANG
                "/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ref4"
                android:layout_below="@id/ref3"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="
                https://sumbercenel.com/wp-content/uploads/2017/05/Wayang-Kulit-arjuna-srikandi-supermini.jpg"/>













        </RelativeLayout>




    </ScrollView>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tsabita Latifaturrohmah"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ayuma Laila Fauza" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Referensi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wikipedia.id"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="google"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="youtube.com"/>
</LinearLayout>